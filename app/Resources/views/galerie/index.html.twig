{% extends 'backend.html.twig' %}

{% block title %}{{ parent () }} Gestion des galeries photos{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Gestion des galeries photos</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_galerie_index'))}}">Mediath√®que</a></li>
            <li class="breadcrumb-item active">Liste </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box box-warning">
            <div class="box-header text-right">
                <a href="{{ absolute_url(path('backend_galerie_new'))}}" class="btn btn-social btn-primary"><i class="fa fa-plus"></i>Ajouter un album</a>
            </div>

            <div class="row">
                {% for galerie in galeries %}
                    <div class="col-md-12 col-lg-3">
                        <div class="box box-default" style="height: 350px">
                            {% if galerie.imageName %}
                                <img class="card-img-top img-responsive" src="{{ vich_uploader_asset(galerie, 'imageFile') }}" alt="{{ galerie.titre }}">
                            {% else %}
                                <img class="card-img-top img-responsive" src="{{ absolute_url(asset('ressources/img/comite/avatar.jpg')) }}" alt="{{ galerie.titre }}" width="250">
                            {% endif %}
                            <div class="box-body">
                                <h4 class="card-title">
                                    {% if galerie.statut %}
                                        <span class="badge badge-success">{{ galerie.titre }}</span>
                                    {% else %}
                                        <span class="badge badge-danger">{{ galerie.titre }}</span>
                                    {% endif %}
                                </h4>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="{{ absolute_url(path('backend_galerie_edit', {'slug': galerie.slug})) }}" >
                                        <button type="button" class="btn btn-primary"><i class="fa fa-edit"></i> Modifier</button>
                                    </a>
                                </div>
                            </div>

                        </div>
                        <!-- /.box -->
                    </div>
                {% else %}

                {% endfor %}
            </div>

    </section>
{% endblock %}
