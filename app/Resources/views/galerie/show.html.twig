{% extends 'base.html.twig' %}

{% block body %}
    <h1>Galerie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ galerie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ galerie.titre }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if galerie.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td>{{ galerie.imageName }}</td>
            </tr>
            <tr>
                <th>Imagesize</th>
                <td>{{ galerie.imageSize }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if galerie.updatedAt %}{{ galerie.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ galerie.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ galerie.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ galerie.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ galerie.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ galerie.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('backend_galerie_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('backend_galerie_edit', { 'id': galerie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
