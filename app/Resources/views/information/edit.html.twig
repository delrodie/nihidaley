{% extends 'backend.html.twig' %}

{% block title %}{{ parent() }} Gestions des informations{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>Gestions des informations</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_information_index'))}}">Information</a></li>
            <li class="breadcrumb-item active">Modification</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-warning">
                <div class="box-header text-right">
                    <a href="{{ absolute_url(path('backend_information_index'))}}" class="btn btn-social btn-primary"><i class="fa fa-list"></i>Liste des informations</a>
                </div>
                <div class="box-body">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            {{ form_start(edit_form, {'attr':{'class':'form-horizontal'}}) }}
                            <div class="row">
                                <div class="col-md-1 col-lg-2">.</div>
                                <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Type</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.type)}}
                                            <span class="help-block">{{ form_errors(edit_form.type)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Libelle</label>
                                        <div class="col-sm-12">
                                            {{ form_widget(edit_form.libelle)}}
                                            <span class="help-block">{{ form_errors(edit_form.libelle)}}</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label text-left">Date</label>
                                        <div class="row">
                                            <div class="col-sm-6" id="webzine-datepicker">
                                                <div class="input-group date">
                                                    {{ form_widget(edit_form.datedeb) }}
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-calendar-o"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6" id="webzine-datepicker">
                                                <div class="input-group date">
                                                    {{ form_widget(edit_form.datefin) }}
                                                    <div class="input-group-addon">
                                                        <i class="fa fa-calendar-o"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-12 control-label text-left"></div>
                                        <div class="checkbox col-sm-12">
                                            {{ form_widget(edit_form.statut)}}
                                            <label for="appbundle_information_statut">Activ√©</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_rest(edit_form) }}
                            <div class="box-footer text-right">
                                <a href="{{ absolute_url(path('backend_information_index')) }}" class="btn btn-default">Annuler</a>
                                <button type="submit" class="btn btn-info">Modifier</button>
                            </div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    {% stylesheets
        'backoffice/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.css'
        'backoffice/tags/tagsinput.css'
        'backoffice/assets/vendor_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css'
        'backoffice/assets/timepicker/jquery.timepicker.min.css'
        filter='cssrewrite' output='backoffice/css/editeur.css'
    %}
        <link rel="stylesheet" href="{{ absolute_url(asset_url)}}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {% javascripts
        'backoffice/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.js'
        'backoffice/js/pages/editor.js'
        'backoffice/tags/tagsinput.js'
        'backoffice/assets/vendor_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js'
        'backoffice/assets/timepicker/jquery.timepicker.min.js'
        'backoffice/js/pages/bootstrap-datepicker.fr.min.js'
        output='backoffice/js/editeur.js'
    %}
        <script src="{{ absolute_url(asset_url)}}"></script>
    {% endjavascripts %}
    <script>
        $('#webzine-datepicker input').datepicker({
            format: "yyyy-mm-dd",
            todayBtn: "linked",
            clearBtn: true,
            language: "fr",
            multidate: false,
            autoclose: true
        });
        $('.timepicker').timepicker({
            'timeFormat': 'H:i:s',
            showInputs: false
        });
        $('#appbundle_ainformation_contenu').wysihtml5();
    </script>

{% endblock %}
