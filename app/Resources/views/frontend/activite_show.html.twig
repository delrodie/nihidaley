{% extends 'base.html.twig' %}

{% block title %} {{ activite.titre }} {% endblock %}

{% block body %}
    <div class="rs-breadcrumbs">
        <img src="{{ absolute_url(asset('ressources/img/bg2.jpg')) }}" alt="" />
    </div>
    <div class="rs-event-details">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <div class="event-details-content">
                        <div class="event-title">
                            <a href="#">{{ activite.titre }}</a>
                        </div>
                        <div class="event-meta">
                            <div class="event-date">
                                <i class="fa fa-calendar"></i>
                                <span>{{ activite.date|date('d M Y') }}</span>
                            </div>
                            <div class="event-time">
                                <i class="fa fa-clock-o"></i>
                                <span>{{ activite.heuredeb|date('H') }}h{{ activite.heuredeb|date('i') }} - {{ activite.heurefin|date('H') }}h{{ activite.heurefin|date('i') }}</span>
                            </div>
                            <div class="event-location">
                                <i class="fa fa-map-marker"></i>
                                <span><a href="#">{{ activite.lieu.libelle }}</a></span>
                            </div>
                        </div>
                        <div class="event-img">
                            {% if activite.imageName %}
                                <img class="card-img-top img-responsive" src="{{ vich_uploader_asset(activite, 'imageFile') }}" alt="{{ activite.titre }}">
                            {% else %}
                                <img class="card-img-top img-responsive" src="{{ absolute_url(asset('ressources/img/activites/01.jpg')) }}" alt="{{ activite.titre }}" width="250">
                            {% endif %}
                        </div>
                        <div class="event-desc">
                            {{ activite.contenu|raw }}
                        </div>

                        <!-- map -->
                        {{ activite.lieu.localisation|raw }}
                        <!-- map end -->

                    </div>
                </div>
                <div class="col-lg-4 col-md-12 mmt-40">
                    {{ render(url('frontend_bloc')) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}