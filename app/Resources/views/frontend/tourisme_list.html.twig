{% extends 'base.html.twig' %}

{% block title %}{{ tourisme.libelle }} en image{% endblock %}

{% block body %}
    <div class="rs-breadcrumbs">
        <img src="{{ absolute_url(asset('ressources/img/bg2.jpg')) }}" alt="" />

    </div>

    <div class="rs-team-single sec-spacer">
        <div class="container">
            <div class="row team">

                <div class="col-lg-12 col-md-12">

                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="skill-title">{{ tourisme.libelle }}</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="team-des text-justify">
                                        {{ tourisme.description|raw }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="gallery-section-page pb-70">
        <div class="gallery-section-area">
            <div class="container">
                <div class="row">
                    {% for photo in photos %}
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="single-gallery">
                                {% if photo.imageName %}
                                    <img src="{{ asset('uploads/tourisme/'~ photo.imageName) | imagine_filter('comite') }}" alt="{{ tourisme.libelle }}" />
                                {% endif %}
                                <div class="popup-icon">
                                    <a class="image-popup" href="{{ asset('uploads/tourisme/'~ photo.imageName) | imagine_filter('galerie') }}"><i class="fa fa-arrows-alt"></i></a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}