{% extends 'base.html.twig' %}

{% block title %}{{ galerie.titre }} en image{% endblock %}

{% block body %}
    <div class="rs-breadcrumbs">
        <img src="{{ absolute_url(asset('ressources/img/bg2.jpg')) }}" alt="" />

    </div>

    <div class="rs-team-single sec-spacer">
        <div class="container">
            <div class="row team">

                <div class="col-lg-12 col-md-12">

                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="skill-title">{{ galerie.titre }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="gallery-section-page pb-70 pt-30">
        <div class="gallery-section-area">
            <div class="container">
                <div class="row">
                    {% for photo in photos %}
                        <div class="col-lg-4 col-md-6 col-sm-12 list-photo">
                            <div class="single-gallery">
                                {% if photo.imageName %}
                                    <img src="{{ asset('uploads/galeries/'~ photo.imageName) | imagine_filter('galerie_cover') }}" alt="{{ galerie.titre }}" />
                                {% endif %}
                                <div class="popup-icon">
                                    <a class="image-popup" href="{{ asset('uploads/galeries/'~ photo.imageName) | imagine_filter('galerie_photo') }}"><i class="fa fa-arrows-alt"></i></a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="paginator"></div>
            </div>
            <div class="row">
                <div class="col-md-2">.</div>
                <div class="col-md-8 text-right">
                    <a href="{{ absolute_url(path('frontend_galerie_index')) }}" title="Retour a la page des albums">
                        <i class="fa fa-reply fa-2x" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}

    <script src="{{ absolute_url(asset('ressources/js/pagination.js')) }}"></script>
    <script>
        $(document).ready(function() {
            pagination(9,'.list-photo','.paginator',3);
        });
    </script>
{% endblock %}