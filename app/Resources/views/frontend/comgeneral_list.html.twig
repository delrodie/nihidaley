{% extends 'base.html.twig' %}

{% block title %}Liste des membres du Commissariat general du festival Tonkpi Nihidaley {% endblock %}

{% block body %}
    <div class="rs-breadcrumbs">
        <img src="{{ absolute_url(asset('ressources/img/bg2.jpg')) }}" alt="" />

    </div>

    <div id="rs-team" class="rs-team fullwidth-team pt-100">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="team-name text-center mb-5">LE COMMISSARIAT GENERAL</h2>
                </div>
            </div>
            <div class="row">
                {% for commissaire in commissaires %}
                    <div class="col-lg-4 col-md-6">
                        <div class="team-item">
                            <div class="team-img">
                                {% if commissaire.imageName %}
                                    <img src="{{ asset('uploads/comite/'~ commissaire.imageName) | imagine_filter('comite') }}" alt="{{ commissaire.identite }}" />
                                {% else %}
                                    <img src="{{ absolute_url(asset('ressources/img/comite/avatar.jpg')) }}" alt="{{ commissaire.identite }}" />
                                {% endif %}_
                                <div class="normal-text">
                                    <h4 class="team-name">{{ commissaire.identite }} </h4>
                                    <span class="subtitle">{{ commissaire.fonction }} </span>
                                </div>
                            </div>
                            <div class="team-content">
                                <div class="display-table">
                                    <div class="display-table-cell">
                                        <div class="team-details">
                                            <h4 class="team-name">
                                                <a href="{{ absolute_url(path('frontend_comgeneral_show', {'slug': commissaire.slug})) }}">{{ commissaire.identite }} </a>
                                            </h4>
                                            <span class="postion">{{ commissaire.fonction }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="rs-team-single sec-spacer">
        <div class="container">
            <div class="row team">

                <div class="col-lg-12 col-md-12 mmb-40">

                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="skill-title">Mission:</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="team-des text-justify">Constituer le Garant moral du Comité d’organisation de Tonkpi Nihidaley
                                    </p>
                                    <p>
                                        Assurer la représentation légale</p>
                                    <p>
                                        Ordonnancer les dépenses</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h3 class="skill-title">Activité:</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="team-des text-justify">
                                    <ul>
                                        <li>-   Désignation des membres du Comité d’Organisation.</li>
                                        <li>-   Présidence des réunions du Comité d’Organisation </li>
                                        <li>-   Approbation du budget</li>
                                        <li>-   Ordonnancement à titre principal des dépenses </li>
                                        <li>-   Représentation du Comité d’organisation vis-à-vis des Autorités et des Partenaires</li>
                                        <li>-   Signature des contrats, accords et correspondances.</li>
                                    </ul>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}