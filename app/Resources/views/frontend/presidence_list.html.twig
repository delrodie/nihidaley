{% extends 'base.html.twig' %}

{% block title %}Presidence du festival Tonkpi Nihidaley {% endblock %}

{% block body %}
    <div class="rs-breadcrumbs">
        <img src="{{ absolute_url(asset('ressources/img/bg2.jpg')) }}" alt="" />

    </div>

    <div id="rs-team" class="rs-team fullwidth-team pt-100">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="team-name text-center mb-5">LA PRESIDENCE</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-3">.</div>
                <div class="col-lg-4 col-md-6">
                    <div class="team-item">
                        <div class="team-img">
                            <img src="{{ absolute_url(asset('ressources/img/comite/02-mabri.jpg')) }}" alt="team Image" />
                            <div class="normal-text">
                                <h4 class="team-name">DR ALBERT TOIKEUSSE MABRI</h4>
                                <span class="subtitle">Le Président de TONKPI NIHIDALEY </span>
                            </div>
                        </div>
                        <div class="team-content">
                            <div class="display-table">
                                <div class="display-table-cell">

                                    <div class="team-details">
                                        <h4 class="team-name">
                                            <a href="#">DR ABDALLAH ALBERT TOIKEUSSE MABRI</a>
                                        </h4>
                                        <span class="postion">Le Président de TONKPI NIHIDALEY </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for president in presidents %}
                    <div class="col-lg-4 col-md-6">
                        <div class="team-item">
                            <div class="team-img">
                                {% if president.imageName %}
                                    <img src="{{ asset('uploads/comite/'~ president.imageName) | imagine_filter('comite') }}" alt="{{ president.identite }}" />
                                {% else %}
                                    <img src="{{ absolute_url(asset('ressources/img/comite/avatar.jpg')) }}" alt="{{ president.identite }}" />
                                {% endif %}
                                <div class="normal-text">
                                    <h4 class="team-name">{{ president.identite }} </h4>
                                    <span class="subtitle">{{ president.type.libelle }} </span>
                                </div>
                            </div>
                            <div class="team-content">
                                <div class="display-table">
                                    <div class="display-table-cell">
                                        <div class="team-details">
                                            <h4 class="team-name">
                                                <a href="{{ absolute_url(path('frontend_presidence_show', {'slug': president.slug})) }}">{{ president.identite }} </a>
                                            </h4>
                                            <span class="postion">{{ president.type.libelle }} <br> {{ president.fonction }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="rs-team-single sec-spacer">
        <div class="container">
            <div class="row team">

                <div class="col-lg-12 col-md-12 mmb-40">

                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="skill-title">Mission:</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="team-des text-justify">Constituer le Garant moral du Comité d’organisation de Tonkpi Nihidaley
                                    </p>
                                    <p>
                                        Assurer la représentation légale</p>
                                    <p>
                                        Ordonnancer les dépenses</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h3 class="skill-title">Activité:</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="team-des text-justify">
                                    <ul>
                                        <li>-   Désignation des membres du Comité d’Organisation.</li>
                                        <li>-   Présidence des réunions du Comité d’Organisation </li>
                                        <li>-   Approbation du budget</li>
                                        <li>-   Ordonnancement à titre principal des dépenses </li>
                                        <li>-   Représentation du Comité d’organisation vis-à-vis des Autorités et des Partenaires</li>
                                        <li>-   Signature des contrats, accords et correspondances.</li>
                                    </ul>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}